<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        showHeader="false"
        id="searchprod"
    >
        <Table
            id="myDialog"
            mode="MultiSelect"
            selectionChange="onItemSelect"
            inset="false"
            items="{ProductSetModel>/}"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title
                            text="SEARCH FOR PRODUCT"
                            level="H2"
                        />
                          <SearchField
            width="22em"
            search="onSearch"
            placeholder="Search Products"
        />
                        <ToolbarSpacer />
                       
                     
                          <Button
                    id="searchproductclose"
                    icon="sap-icon://decline"
                    press="closeSearchProd"
                />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column width="12em">
                    <Text text="ARTICLE CODE (EAN/UPC)" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="BAR CODE" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                >
                    <Text text="PRODUCT" />
                </Column>
                  <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                >
                    <Text text="ARTICLE TYPE" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="ARTICLE NO" />
                </Column >
                <Column visible="false" >
                    <Text text="QUANTITY" />
                </Column>
                <Column   minScreenWidth="Desktop"
                 demandPopin="true">
                    <Text text="UOM" />
                </Column>
                <Column   minScreenWidth="Desktop"
                  demandPopin="true"
                
                >
                    <Text text="Price" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier
                            title="{Name}"
                            text="{path:'ProductSetModel>ArticleNo',formatter:'.formatter.precendingZerosRemvoal'}"
                        />
                        <Text text="{ProductSetModel>Barcode}" />
                        <Text text="{ProductSetModel>ArticleDesc}" />
                        <Text text="{ProductSetModel>ArticleType}" />
                        <!-- <ObjectNumber number="{ProductSetModel>ArticleNo}" /> -->
                        <ObjectNumber number="{path:'ProductSetModel>ArticleNo',formatter:'.formatter.precendingZerosRemvoal'}"/>
                         <StepInput 
                            id="CurrentValue"
                            value="{ProductSetModel>quantity}"
                          min ="1"
                            width="100px"
                            class="step_input"
                        />
                          <Text text="{ProductSetModel>UOM}" />
                        <ObjectNumber number="{ProductSetModel>RetailPrice}" />
                        <!-- <StepInput
                            id="CurrentValue"
                            value="{mainModel>quantity}"
                            width="100px"
                            class="step_input"
                            change="currentChangeHandler"
                        /> -->
                       
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <OverflowToolbar id="otbFooter">
                <ToolbarSpacer />
                <Button
                    text="ADD TO SALE"
                    press="onAddToSale"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>