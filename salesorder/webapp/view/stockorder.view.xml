<mvc:View
    controllerName="com.luxasia.salesorder.controller.stockorder"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    height="100%"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        showHeader="false"
        id="stockorder1"
    >
        <OverflowToolbar
            class="header"
            id="tbHeaderr"
        >
            <Text
                text="luxasia"
                class="mainmenutext"
            />
        </OverflowToolbar>
        <f:Form
            id="FormChange3543"
            editable="true"
        >
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Store Type">
                            <f:fields>
                                <ComboBox
                                    editable="false"
                                    class="storeTypeSelect"
                                    id="DocumentTypeComboBox"
                                    selectedKey="{StoreModel>/selectedStoreType}"
                                    selectionChange="handleSelectionChange"
                                    placeholder="Store Type"
                                >
                                    <core:Item
                                        text="Boutique"
                                        key="B"
                                    />
                                    <core:Item
                                        text="Consignment/Outright"
                                        key="C"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            label="Storage Location"
                            visible="{=${StoreModel>/selectedStoreType} === 'B' ? true : false}"
                        >
                            <f:fields>
                                <ComboBox
                                    items="{storageLocModel>/}"
                                    id="storageLocation"
                                    showSecondaryValues="true"
                                    selectionChange="handleStorageLocation"
                                >
                                    <core:ListItem
                                        text="{storageLocModel>Name}"
                                        key="{storageLocModel>Storage_loc}"
                                        additionalText="{storageLocModel>Storage_loc}"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Delivery Date">
                            <f:fields>
                                <DatePicker
                                    id="deliveryDate"
                                    displayFormat="dd.MM.yyyy"
                                    valueFormat="dd.MM.yyyy"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            label="Document Type"
                            visible="{=${StoreModel>/selectedStoreType} === 'B' ? true : false}"
                        >
                            <f:fields>
                                <ComboBox
                                    id="documentType"
                                    selectionChange="onDocumentType"
                                >
                                    <core:Item
                                        text="Stock Transfer Order"
                                        key="STO"
                                    />
                                    <core:Item
                                        text="Stock Transfer Order Return"
                                        key="STO_RET"
                                    />
                                    <!-- <core:Item text="Stock Transport Order" key="STORE_TO_STORE"/> -->
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            label="Document Type"
                            visible="{=${StoreModel>/selectedStoreType} !== 'B' ? true : false}"
                        >
                            <f:fields>
                                <ComboBox
                                    id="documentTypeConsigment"
                                    selectionChange="onDocumentType"
                                >
                                    <core:Item
                                        text="Department Store Order"
                                        key="NORMAL"
                                    />
                                    <core:Item
                                        text="Department Store Order return"
                                        key="EXT_RET"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            label="Supply Plant"
                            visible="{=${StoreModel>/selectedStoreType} === 'B' ? true : false}"
                        >
                            <f:fields>
                                <ComboBox
                                    items="{supplyPlantModel>/}"
                                    id="supplyPlant"
                                    showSecondaryValues="true"
                                    selectionChange="onSupplyPlant"
                                >
                                    <core:ListItem
                                        text="{supplyPlantModel>Name}"
                                        key="{supplyPlantModel>VendorNo}"
                                        additionalText="{supplyPlantModel>VendorNo}"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement
                            label="Supply Vendor"
                            visible="{=${StoreModel>/selectedStoreType} !== 'B' ? true : false}"
                        >
                            <f:fields>
                                <ComboBox
                                    items="{supplyVendorModel>/}"
                                    id="supplyVendor"
                                    showSecondaryValues="true"
                                    selectionChange="onSupplyVendor"
                                >
                                    <core:ListItem
                                        text="{supplyVendorModel>Name}"
                                        key="{supplyVendorModel>VendorNo}"
                                        additionalText="{supplyVendorModel>VendorNo}"
                                    />
                                </ComboBox>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
        <Table
            items="{cartpurchaseModel>/selectedItems}"
            id="stockordertable"
        >
            <headerToolbar>
                <OverflowToolbar class="otbSubheader">
                    <Text
                        text="PURCHASE ORDER"
                        class="transtext"
                    />
                    <ToolbarSpacer />
                    <Button
                        text="Add Products"
                        class="transadd"
                        press="onAddProduct"
                    />
                </OverflowToolbar>
            </headerToolbar>

            <columns>
                <Column width="12em">
                    <Text text="Bar Code" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="Product" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="Quantity" />
                </Column>
                 <Column hAlign="Center">
                   
                </Column>
                <Column hAlign="Center">
                    <Text text="UOM" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier text="{cartpurchaseModel>Barcode}" />
                        <HBox>
                            <items>
                                <ObjectIdentifier
                                    text="{cartpurchaseModel>ArticleDesc}"
                                />
                            </items>
                        </HBox>
                        <StepInput
                            value="{cartpurchaseModel>quantity}"
                            max=""
                            min="1"
                            step="1"
                            width="80px"
                            validationMode="LiveChange"
                            change="onQuantityChange"
                        />

                        <Button
                            icon="sap-icon://delete"
                            press="onDeletePoItem"
                        />

                        <ObjectIdentifier text="{cartpurchaseModel>UOM}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <OverflowToolbar
                class=""
                id=""
            >
                <ToolbarSpacer />
                <Button
                    text="CANCEL"
                    press="onCancelPress"
                    class="transcancel"
                />
                <Button
                    text="Create Purchase Order"
                    press="onPoPress"
                    class="transsave"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
