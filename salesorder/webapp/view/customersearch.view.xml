									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
           <Table
    id="customerTable"
    visible="false"
    inset="false"
    class="myCustomTable" items="{customerModel>/}"
>
    <columns>
      <Column hAlign="Center" demandPopin="true">
            <Text text="CUSTOMER NO" />
        </Column>
        <Column hAlign="Center" demandPopin="true" minScreenWidth="Desktop">
