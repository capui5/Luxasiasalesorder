    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    models="myData"
>
    <SplitContainer id="splitContainer">
    
        <masterPages>
            <Page
                id="master"
                title="STOCK LIST"
            >
                <content>
                  
                     <List
                         id= "inventory"
                        items="{path:'mainModel>/InventoryHeadSet'}"
                        mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
                        selectionChange=".onListItemPress"
                    >
                        <items>
                            <ObjectListItem
                                title="Stock Count: {mainModel>StockCountNo}"
                                class="poText"
                            >
                                <attributes>
                                    <ObjectAttribute
                                        text="Sales Emp: {mainModel>SalesEmp}"
                                    />
                                    <ObjectAttribute
                                        text="Status Description: {mainModel>StatusDesc}"
                                    />
                                </attributes>
                            </ObjectListItem>
                        </items>
                    </List>
                </content>
                     <footer>
                	<Toolbar>
            <Button
             width="100%"
                    text="STOCK INVENTORY"
                    press="onInventoryPress"
                    class="createBtn"
                />
                	</Toolbar>
        </footer>
                    
