<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        showHeader="false"
        id="purchaseprod1"
    >
        <Table
            id="mypurchaseDialog1"
            mode="MultiSelect"
            selectionChange="onItemSelect"
            inset="false"
            items="{ProductSetModel>/}"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title
                            text="SEARCH FOR PRODUCT"
                            level="H2"
                        />
                        <ToolbarSpacer />

                        <Button
                            icon="sap-icon://decline"
                            press="closeSearchProd"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column width="12em">
                    <Text text="ARTICLE CODE (EAN/UPC)" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <Text text="BAR CODE" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                >
                    <Text text="PRODUCT" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <Text text="ARTICLE NO" />
                </Column>
                <Column>
                    <Text text="QUANTITY" />
                </Column>
                <Column>
                    <Text text="UOM" />
                </Column>
                <Column>
                    <Text text="Price" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <ObjectIdentifier
                            title="{Name}"
                            text="{path:'ProductSetModel>ArticleNo',formatter:'.formatter.precendingZerosRemvoal'}"
                        />
                        <Text text="{ProductSetModel>Barcode}" />
                        <Text text="{ProductSetModel>ArticleDesc}" />
                        <ObjectNumber number="{path:'ProductSetModel>ArticleNo',formatter:'.formatter.precendingZerosRemvoal'}" />
                        <!-- <StepInput
                        id="quanvalue"
                            value="{ProductSetModel>quantity}"
                            width="100px"
                            class="step_input"
                        /> -->
                        <StepInput
                            min="1" 
                            value="{ProductSetModel>quantity}"
                            width="100px"
                            class="step_input"
                        />
                        <Text text="{ProductSetModel>UOM}" />
                        <ObjectNumber number="{ProductSetModel>RetailPrice}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <OverflowToolbar id="obFooter">
                <ToolbarSpacer />
                <Button
                    text="Add To Purchase Order"
                    press="onAddToPurchase"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
